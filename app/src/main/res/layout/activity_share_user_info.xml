<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context="com.youpon.home1.ui.home.activities.ShareUserInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#192548"
        android:layout_height="?actionBarSize"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:src="@mipmap/navbar_btn_back_nor"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="分享用户详情"/>
        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x11"
            android:src="@mipmap/navbar_btn_edit_nor"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#192548"
        android:layout_height="@dimen/y148">
    <com.youpon.home1.comm.view.CustomShapeImageView
        android:id="@+id/touxiang"
        app:shape="circle"
        app:onlyDrawBorder="false"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_marginTop="@dimen/y24"
        android:layout_marginLeft="@dimen/x56"
        android:src="@mipmap/user_img_def_80"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/y31"
                android:layout_marginLeft="@dimen/x28"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#47506c"
                    android:text="昵称:"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#47506c"
                    android:text="小宝贝"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y8"
                android:layout_marginLeft="@dimen/x28"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#47506c"
                    android:text="账号:"/>
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#47506c"
                    android:text="15278588"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginTop="@dimen/y8"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#47506c"
                    android:text="备注:"/>
                <TextView
                    android:id="@+id/beizu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:textColor="#47506c"
                    android:text="二二"/>
                <ImageView
                    android:id="@+id/edit_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x6"
                    android:src="@mipmap/share_btn_edit_nor"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:text="分享给他的设备"/>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:text=" 1个"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv"
        android:divider="#eee"
        android:dividerHeight="0.5dp"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
