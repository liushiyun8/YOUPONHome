<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.youpon.home1.ui.user.ResetpwdActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#192548"
        android:layout_height="?actionBarSize"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:src="@mipmap/navbar_btn_back_nor"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="修改密码"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x16"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textSize="14sp"
                android:textColor="@color/bla"
                android:text="验证密码"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:layout_marginTop="@dimen/y9"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/oldpwd"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_height="@dimen/y20"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:hint="请输入你的旧密码"/>
                <ImageView
                    android:id="@+id/dele"
                    android:visibility="gone"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x16"
                    android:src="@mipmap/login_btn_del_nor"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y10"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:textColor="@color/bla"
                android:textSize="14sp"
                android:text="设置密码"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:layout_marginTop="@dimen/y9"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/newpwd"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColorHint="@color/gray"
                    android:layout_height="@dimen/y20"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:hint="请设置6—10个字符包含数字和字母的密码"/>
                <ImageView
                    android:id="@+id/dele1"
                    android:visibility="gone"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x10"
                    android:src="@mipmap/login_btn_del_nor"/>
                <ImageView
                    android:id="@+id/show"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:layout_marginRight="@dimen/x12"
                    android:src="@mipmap/login_btn_invis_nor"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y10"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:enabled="false"
        android:background="@drawable/nextcolor"
        android:text="完成"/>
    </LinearLayout>
