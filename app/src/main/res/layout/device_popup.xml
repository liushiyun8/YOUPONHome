<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/pop_bg"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/wifiset"
    android:paddingTop="@dimen/y10"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y60"
   >
    <ImageView
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x10"
        android:src="@mipmap/equ_ic_wifi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="网络配置"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x19"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/addwangguan"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y50"
    >
    <ImageView
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x10"
        android:src="@mipmap/equ_ic_addgateway"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="添加网关"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x19"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/addshebei"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y50"
    >
    <ImageView
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x10"
        android:src="@mipmap/equ_ic_addequ"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="添加设备"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x19"
        android:background="@color/divider"/>
</LinearLayout>