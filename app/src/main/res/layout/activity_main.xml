<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#192548"
        android:layout_height="?actionBarSize"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:src="@mipmap/navbar_btn_back_nor"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="登录"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/x16"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textColor="@color/bla"
            android:textSize="14sp"
            android:text="手机号码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:layout_marginTop="@dimen/y18"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/acount"
                android:layout_width="0dp"
                android:background="@null"
                android:textSize="16sp"
                android:layout_weight="1"
                android:inputType="phone"
                android:layout_height="@dimen/y20"
                android:paddingLeft="@dimen/edit_paddingleft"
                android:textColorHint="@color/gray"
                android:singleLine="true"
                android:layout_gravity="center"
                android:hint="请输入你的手机号"/>
            <ImageView
                android:id="@+id/dele"
                android:visibility="gone"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x16"
                android:src="@mipmap/login_btn_del_nor"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y18"
            android:layout_height="1dp"
            android:background="#eeeeee"/>
        <ListView
            android:id="@+id/lv"
            android:visibility="gone"
            android:background="@drawable/edit_bg"
            android:scrollbars="none"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/edit_paddingleft"
            android:layout_width="@dimen/edit_width"
            android:layout_height="@dimen/lv_height"></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textColor="@color/bla"
            android:textSize="14sp"
            android:text="密码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:layout_marginTop="@dimen/y18"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/pwd"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_height="@dimen/y20"
                android:inputType="textPassword"
                android:textColorHint="@color/gray"
                android:paddingLeft="@dimen/edit_paddingleft"
                android:singleLine="true"
                android:layout_gravity="center"
                android:hint="请输入密码"/>
            <ImageView
                android:id="@+id/dele1"
                android:visibility="gone"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/login_btn_del_nor"/>
            <ImageView
                android:id="@+id/show"
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:layout_marginRight="@dimen/x12"
                android:src="@mipmap/login_btn_invis_nor"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y18"
            android:layout_height="1dp"
            android:background="#eeeeee"/>

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/y9"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f6ab00"
                android:textSize="14sp"
                android:text="忘记密码？"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#f6ab00"/>
            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f6ab00"
                android:textSize="14sp"
                android:layout_marginRight="@dimen/x15"
                android:text="快速注册 >"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:enabled="false"
        android:background="@drawable/nextcolor"
        android:text="登录"/>
</LinearLayout>
