<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/y95">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/y95"
        android:gravity="center"
        android:paddingLeft="@dimen/x16"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x16"
            android:visibility="gone"
            android:src="@drawable/listbtn_del"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="42sp"
                    android:text="19:00"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_marginLeft="@dimen/x9"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:paddingLeft="1.5dp"
                    android:paddingRight="1.5dp"
                    android:textColor="#6e7aa0"
                    android:background="@drawable/circlerange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启"/>
                <TextView
                    android:id="@+id/statusV"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/x9"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:paddingLeft="1.5dp"
                    android:paddingRight="1.5dp"
                    android:textColor="#6e7aa0"
                    android:background="@drawable/circlerange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:textColor="#999999"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:layout_marginLeft="@dimen/x5"
                android:textSize="13sp"
                android:text="二，四，六，七"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x16"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/scene_select"/>
            <ImageView
                android:id="@+id/more"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/list_btn_more"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dele"
        android:layout_width="@dimen/x80"
        android:layout_height="match_parent"
        android:background="#d70606"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_ic_del"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y3"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="删除"/>
    </LinearLayout>


</LinearLayout>