<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context=".ui.device.TimeTaskAddActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#192548"
        android:layout_height="?actionBarSize"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:src="@mipmap/navbar_btn_back_nor"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="编辑定时"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x11"
            android:textSize="16sp"
            android:textColor="#c2c4cc"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y260"
        android:background="#192548"
        android:gravity="center"
        android:paddingTop="@dimen/y35"
        android:paddingBottom="@dimen/y35"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16"
        android:orientation="horizontal">
        <com.weigan.loopview.LoopView
            android:id="@+id/loopvH"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.weigan.loopview.LoopView
            android:id="@+id/loopvM"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <!--<com.youpon.home1.comm.view.PickerView-->
            <!--android:id="@+id/hour"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content" />-->
        <!--<com.youpon.home1.comm.view.PickerView-->
            <!--android:id="@+id/min"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:text="状态"/>
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:textColor="#6e7aa0"
                />
            <RadioGroup
                android:id="@+id/status_check"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/open"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:button="@null"
                    android:text="开启"
                    android:layout_marginRight="@dimen/x16"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"/>
                <RadioButton
                    android:id="@+id/close"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:button="@null"
                    android:checked="true"
                    android:text="关闭"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"/>
            </RadioGroup>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/huanqu"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/y10"
            android:layout_height="@dimen/y68">
            <RadioButton
                android:id="@+id/didang"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:textSize="14sp"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="低档"/>
            <View
                android:layout_width="@dimen/x66"
                android:layout_height="1dp"
                android:layout_gravity="center"/>
            <RadioButton
                android:id="@+id/gaodang"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:textSize="14sp"
                android:background="@drawable/radio_bg"
                android:text="高档"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/guangnuan"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y68"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginBottom="@dimen/y10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/equ_ic_bright_s"/>
            <!--android:thumbOffset="1dp" -->
            <SeekBar
                android:id="@+id/seek"
                android:layout_width="@dimen/x228"
                android:layout_gravity="center"
                android:splitTrack="false"
                android:maxHeight="@dimen/y6"
                android:progressDrawable="@drawable/draw_seekbarbg"
                android:thumb="@mipmap/equ_btn_slider_nor"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x8"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/equ_ic_bright_l"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nuanqu"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginBottom="@dimen/y10"
            android:gravity="center"
            android:layout_height="@dimen/y68">
            <RadioGroup
                android:id="@+id/fengdang"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/liang"
                    android:checked="false"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"
                    android:text="凉风"/>

                <RadioButton
                    android:id="@+id/nuan"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"
                    android:text="暖风"/>

                <RadioButton
                    android:id="@+id/re"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"
                    android:text="热风"/>
            </RadioGroup>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RadioGroup
                android:id="@+id/feng_dong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/jingzhi"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"
                    android:text="静止"/>

                <RadioButton
                    android:id="@+id/baifeng"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:button="@null"
                    android:layout_marginLeft="@dimen/x16"
                    android:textColor="@color/dang_select"
                    android:background="@drawable/radio_bg"
                    android:text="摆风"/>
            </RadioGroup>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#eee"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_gravity="center_vertical"
                android:text="重复"/>
            <TextView
                android:id="@+id/rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="单次"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/week1"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="一"/>
            <CheckBox
                android:id="@+id/week2"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="二"/>
            <CheckBox
                android:id="@+id/week3"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:gravity="center"
                android:button="@null"
                android:padding="5dp"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="三"/>
            <CheckBox
                android:id="@+id/week4"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="四"/>
            <CheckBox
                android:id="@+id/week5"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="五"/>
            <CheckBox
                android:id="@+id/week6"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="六"/>
            <CheckBox
                android:id="@+id/week7"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/dang_select"
                android:background="@drawable/radio_bg"
                android:text="日"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>
</LinearLayout>
