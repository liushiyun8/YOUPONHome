<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.device.WifiSetActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#192548"
        android:layout_height="?actionBarSize"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:src="@mipmap/navbar_btn_back_nor"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="网络配置"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/settinglayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff7e9"
            android:layout_height="@dimen/y36">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/equ_ic_tips"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#f6ab00"
                android:layout_marginLeft="@dimen/x4"
                android:text="倒计时30秒，自动停止配置"/>
        </LinearLayout>
        <com.youpon.home1.comm.view.CircleProgress
            android:id="@+id/cirPro"
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x230"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y44"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wifiSetlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/x16"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textColor="#333"
            android:textSize="14sp"
            android:text="网络"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:layout_marginTop="@dimen/y18"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/acount"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:inputType="phone"
                android:textColor="#333"
                android:layout_height="@dimen/y20"
                android:singleLine="true"
                android:text="wifi账号"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y18"
            android:layout_height="1dp"
            android:background="#eeeeee"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textSize="14sp"
            android:textColor="#333"
            android:text="密码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:layout_marginTop="@dimen/y18"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/pwd"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_height="@dimen/y20"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_gravity="center"
                android:hint="请输入密码"/>
            <ImageView
                android:id="@+id/dele1"
                android:visibility="gone"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/login_btn_del_nor"/>
            <ImageView
                android:id="@+id/show"
                android:visibility="gone"
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:layout_marginRight="@dimen/x12"
                android:src="@mipmap/login_btn_invis_nor"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y18"
            android:layout_height="1dp"
            android:background="#eeeeee"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/setlay"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/y60"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/set"
            android:layout_width="@dimen/x296"
            android:layout_height="@dimen/y44"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/kefu_bg"
            android:gravity="center"
            android:text="配置"/>
    </LinearLayout>
</LinearLayout>
