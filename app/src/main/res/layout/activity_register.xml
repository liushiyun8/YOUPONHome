<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.user.RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#192548"
        android:layout_height="?actionBarSize"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:src="@mipmap/navbar_btn_back_nor"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="注册"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/x16"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/yanzheng"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:textColor="@color/bla"
                android:textSize="14sp"
                android:text="手机号码"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:layout_marginTop="@dimen/y12"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/account"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:textColorHint="@color/gray"
                    android:layout_height="@dimen/y20"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:hint="请输入你的手机号"/>
                <ImageView
                    android:id="@+id/dele"
                    android:visibility="gone"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x16"
                    android:src="@mipmap/login_btn_del_nor"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y5"
                android:layout_height="1dp"
                android:background="#eeeeee"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bla"
                android:layout_marginTop="@dimen/y20"
                android:textSize="14sp"
                android:text="验证码"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y12"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColorHint="@color/gray"
                    android:layout_height="@dimen/y20"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:hint="请输入你的验证码"/>
                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/x13"
                    android:paddingRight="@dimen/x13"
                    android:minWidth="0dp"
                    android:layout_height="@dimen/y25"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/next_clor"
                    android:layout_marginRight="@dimen/x12"
                    android:textSize="13sp"
                    android:text="获取验证码"
                    android:background="@drawable/code_select"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y5"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pwdlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y12"
                android:textColor="@color/bla"
                android:textSize="14sp"
                android:text="设置密码"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:layout_marginTop="@dimen/y20"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColorHint="@color/gray"
                    android:layout_height="@dimen/y20"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:hint="请设置6—10个字符包含字母数字的密码"/>
                <ImageView
                    android:id="@+id/dele1"
                    android:visibility="gone"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x16"
                    android:src="@mipmap/login_btn_del_nor"/>
                <ImageView
                    android:id="@+id/show"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:layout_marginRight="@dimen/x12"
                    android:src="@mipmap/login_btn_invis_nor"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y5"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x8"
                android:button="@drawable/agreecheck"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="我同意"/>
            <TextView
                android:id="@+id/xieyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/yellow"
                android:text="《友邦智能用户协议》"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/check"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/nextcolor"
        android:text="注册"/>
</LinearLayout>
