<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="@dimen/x360"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x18"
        android:layout_height="@dimen/y60">
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/main_select"
            android:layout_marginLeft="@dimen/x20"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/delet"
            android:visibility="gone"
            android:layout_width="@dimen/x37"
            android:layout_height="@dimen/x37"
            android:layout_gravity="center"
            android:src="@mipmap/equ_ic_lighting"/>
        <ImageView
            android:id="@+id/icon"
            android:visibility="gone"
            android:layout_width="@dimen/x37"
            android:layout_height="@dimen/x37"
            android:layout_marginLeft="@dimen/x20"
            android:layout_gravity="center"
            android:src="@mipmap/equ_ic_lighting"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:paddingLeft="@dimen/x12"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="过道"/>
        <TextView
            android:id="@+id/panel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x10"
            android:textColor="#999"
            android:textSize="10sp"
            android:text="面板"/>
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="客厅"
            />
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/list_btn_more"/>
    </LinearLayout>
    <View
        android:id="@+id/diver"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x68"
        android:background="#eee"/>
</LinearLayout>