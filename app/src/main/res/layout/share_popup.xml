<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/pop_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/sharedevice"
        android:paddingTop="@dimen/y10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        >
        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x10"
            android:src="@mipmap/share_ic_share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:text="分享设备"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x19"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/sharecode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        >
        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x10"
            android:src="@mipmap/share_ic_code"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:text="扫描二维码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x19"
        android:background="@color/divider"/>
</LinearLayout>